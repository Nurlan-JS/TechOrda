server {
    listen 8080;
    server_name example.com;
	
    location / {
        root /var/www/html/; 
        try_files /index.html =404; 
    }

    location /images/ {
        root /var/www/html/cats;    
        auth_basic "Restricted Area" #Всплывающее сообщение при запросе авторизации
        auth_basic_user_file /etc/nginx/conf.d/design_passwd; 
        autoindex on;
    }

    location /gifs/ {
        root /var/www/html/gifs;
        auth_basic "Marketing Access"
        auth_basic_user_file /etc/nginx/conf.d/marketing_passwd;
        autoindex on; 
    }

    location /secret_word {
        return 201 'jusan-nginx-locations';
        add_header Content-Type text/plain;
    }
    
    error_log /var/log/nginx/error.log;
    access_log /var/log/nginx/access.log;
}
