server {
    listen 80;
    server_name your_domain_or_ip;

    # Location для сервировки статических файлов, таких как index.html
    location / {
        root /path/to/your/static/files;  # Путь до папки с index.html
        try_files $uri /index.html;       # Если запрашиваемый файл не найден, возвращаем index.html
    }

    # Прокси для /api запросов, который удаляет префикс /api и перенаправляет на backend
    location /api/ {
        rewrite ^/api/(.*)$ /$1 break;      # Убираем /api из URI
        proxy_pass http://localhost:9090;   # Проксируем на backend сервер
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Дополнительные настройки для логирования и обработки ошибок (по желанию)
    error_log /var/log/nginx/error.log;
    access_log /var/log/nginx/access.log;
}
